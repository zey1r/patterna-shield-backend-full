# Environment Variables for Patterna Shield Backend

# Server Configuration
DEBUG=False
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8007

# Security
SECRET_KEY=your_super_secret_key_change_this_in_production
API_KEY=your_api_key_here

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./fraud_detection.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./fraud_detection.db

# External API Keys (Optional - system works in demo mode without them)
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here
GOOGLE_SAFE_BROWSING_KEY=your_google_safe_browsing_key_here
PHISHTANK_API_KEY=your_phishtank_api_key_here

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_FILE=fraud_detection.log
LOG_ROTATION=daily
